<h2>Categories list</h2>
<hr>
<a href="/admin/categories/add"><button class="btn btn-success">Add</button></a>
{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Created at: {{date}}</small>
            <br>
            <a href="/admin/categories/edit/{{_id}}"><button class="btn btn-success mt-3">Edit</button></a>
            <form action="/admin/categories/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Delete</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Categories list is empty</h4>
{{/each}}