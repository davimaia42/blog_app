<h2>Posts list</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">Add</button></a>
{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{title}}</h4>
            <p>{{description}}</p>
            <small>{{date}}</small>
            <small>{{categorie.name}}  {{categorie.slug}}</small> 
            <br>
            <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success mt-3">edit</button></a>
            <a href="/admin/posts/delete/{{_id}}"><button class="btn btn-danger mt-3">delete</button></a>
        </div>
    </div>
{{else}}
    <p class="mt-4">No posts created</p>
{{/each}}