{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Edit post:</h4>
        <form action="/admin/posts/edit" method="POST">
            <input type="hidden" value="{{post._id}}" name="id">
            <label for="title">Title:</label>
            <input type="text" name="title" class="form-control" value="{{post.title}}">
            <label for="slug">Slug</label>
            <input type="text" name="slug" class="form-control" value="{{post.slug}}">
            <label for="description">Description</label>
            <input type="text" name="description" class="form-control" value="{{post.description}}">
            <label for="content">Content</label>
            <textarea name="content" class="form-control">{{post.content}}</textarea>
            <label for="categorie">Categorie</label>
            <select name="categorie" class="custom-select">
                {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                {{else}}
                    <option value="0">Categories list is empty</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">edit</button>
        </form>
    </div>
</div>